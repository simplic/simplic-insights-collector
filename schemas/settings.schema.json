{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://simplic.biz/schemas/simplic-insight/settings",
    "$defs": {
        "interval": {
            "type": "string",
            "pattern": "^(\\d+h)?(\\d+m)?(\\d+s(\\d+)?)?$",
            "examples": [
                "1s",
                "2s",
                "5s",
                "10s",
                "30s",
                "1m",
                "2m",
                "5m",
                "10m",
                "30m",
                "1h",
                "2h",
                "1h2m3s"
            ]
        },
        "uuid": {
            "type": "string",
            "format": "uuid",
            "pattern": "^[0-9a-fA-F]{8}(-[0-9a-fA-F]{4}){3}-[0-9a-fA-F]{12}$"
        }
    },
    "type": "object",
    "properties": {
        "uuid": {
            "$ref": "#/$defs/uuid",
            "description": "Unique identifier of the host"
        },
        "name": {
            "type": "string",
            "description": "Name of the sensor host/collector"
        },
        "url": {
            "type": "string",
            "format": "url",
            "description": "URL of the endpoint"
        },
        "token": {
            "type": "string",
            "description": "Access token for the API"
        },
        "upload": {
            "type": "object",
            "properties": {
                "min_interval": {
                    "$ref": "#/$defs/interval",
                    "description": "Minimum interval for uploading. Data will be batched in-between"
                },
                "max_interval": {
                    "$ref": "#/$defs/interval",
                    "description": "Maximum interval for upload. This is used to send heartbeats"
                },
                "max_backlog": {
                    "type": "number",
                    "description": "Maximum number of measurements that will be stored for upload"
                }
            },
            "required": [
                "min_interval",
                "max_interval",
                "max_backlog"
            ]
        },
        "packages": {
            "type": "array",
            "description": "Package sources",
            "items": {
                "type": "object",
                "oneOf": [
                    {
                        "description": "Install sensor package from a directory",
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "folder"
                            },
                            "path": {
                                "type": "string",
                                "format": "path",
                                "description": "Path to folder containing manifest.json and sensors/"
                            }
                        },
                        "required": [
                            "type",
                            "path"
                        ]
                    },
                    {
                        "description": "Install sensor package from a github release",
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "github"
                            },
                            "pkg": {
                                "type": "string",
                                "description": "Package identifier"
                            },
                            "owner": {
                                "type": "string",
                                "description": "Username of the repository owner"
                            },
                            "repo": {
                                "type": "string",
                                "description": "Repository identifier"
                            },
                            "version": {
                                "type": "string",
                                "format": "version",
                                "description": "Version number or 'latest'",
                                "default": "latest"
                            }
                        },
                        "required": [
                            "type",
                            "pkg",
                            "owner",
                            "repo"
                        ]
                    }
                ]
            }
        },
        "sensors": {
            "type": "array",
            "description": "Sensor configurations",
            "items": {
                "type": "object",
                "properties": {
                    "uuid": {
                        "$ref": "#/$defs/uuid",
                        "description": "Unique identifier of the sensor"
                    },
                    "type": {
                        "type": "string",
                        "description": "Type of the sensor"
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the sensor"
                    },
                    "interval": {
                        "$ref": "#/$defs/interval"
                    },
                    "settings": {
                        "description": "Sensor-specific settings"
                    }
                },
                "required": [
                    "uuid",
                    "type",
                    "name",
                    "interval",
                    "settings"
                ]
            }
        }
    },
    "required": [
        "uuid",
        "url",
        "token",
        "upload",
        "sensors"
    ]
}